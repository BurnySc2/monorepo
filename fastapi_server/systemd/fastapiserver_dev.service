# /etc/systemd/system/fastapiserverdev.service
[Service]
ExecStart=/usr/bin/docker run --rm --name fastapi_server_dev \
    --env STAGE=DEV \
    --env-file ./.env \
    -v ./data:/root/fastapi_server/data \
    -l traefik.enable=true \
    -l traefik.http.routers.fastapiserverdev.rule=Host(`apidev.burnysc2.de`) \
    -l traefik.http.services.fastapiserverdev.loadbalancer.server.port=8000 \
    -l traefik.http.routers.fastapiserverdev.tls=true \
    -l traefik.http.routers.fastapiserverdev.tls.certresolver=production \
    --network traefiknet \
    burnysc2/fastapi_server:latest_dev
Restart=always
RestartSec=20
SyslogIdentifier=fastapiserverdev
User=fastapiserverdev
Group=fastapiserverdev
WorkingDirectory=/home/fastapiserverdev/

[Install]
WantedBy=multi-user.target
