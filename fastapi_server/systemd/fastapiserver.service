# /etc/systemd/system/fastapiserver.service
[Service]
ExecStart=/usr/bin/docker run --rm --name fastapi_server -p 8000:8000 --mount type=bind,source="/home/fastapiserver/data",destination=/root/fastapi_server/data burnysc2/fastapi_server:latest
Restart=always
RestartSec=20
SyslogIdentifier=fastapiserver
User=fastapiserver
Group=fastapiserver
WorkingDirectory=/home/fastapiserver/

[Install]
WantedBy=multi-user.target
