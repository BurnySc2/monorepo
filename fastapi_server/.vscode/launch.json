    "version": "0.2.0",
    "configurations": [
        {
            "name": "Fastapi Server: Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            }
        },
        {
            "name": "Fastapi Server: Start LiteStar",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "litestar",
            "args": ["run", "--reload", "--wc", "8"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            }
        },
        {
            "name": "Fastapi Server: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "pytest",
            "args": [
                "test",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}