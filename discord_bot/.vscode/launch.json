    "version": "0.2.0",
    "configurations": [
        {
            "name": "Discord Bot: Run Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Discord Bot: Start",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "discord_bot.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Discord Bot: Run Tests",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "pytest",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}