{
    "name": "my-app",
    "version": "0.0.1",
    "scripts": {
        "dev": "cross-env BACKEND_SERVER='localhost:8000' svelte-kit dev",
        "build": "svelte-kit build",
        "build-precommit": "svelte-kit build | grep ERR",
        "preview": "svelte-kit preview",
        "preview2": "cross-env BACKEND_SERVER='localhost:7899' npm run build && cross-env BACKEND_SERVER='localhost:7899' svelte-kit preview -p 3000",
        "test": "playwright test",
        "test:all": "playwright test --browser=all --workers=1",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint --ignore-path .gitignore .  --max-warnings 0",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
        "prune": "rm node_modules -rf && rm package-lock.json -f && npm i",
        "update": "npx npm-check-updates -u && npm run prune"
    },
    "devDependencies": {
        "@playwright/test": "^1.21.1",
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte3": "^3.4.1",
        "npm-check-updates": "^12.5.8",
        "prettier": "^2.6.2",
        "prettier-plugin-svelte": "^2.7.0"
    },
    "dependencies": {
        "@sveltejs/adapter-static": "next",
        "@sveltejs/kit": "next",
        "moment": "^2.29.2",
        "svelte": "^3.44.0",
        "svelte-check": "^2.6.0",
        "svelte-preprocess": "^4.10.5",
        "typescript": "^4.6.3"
    },
    "type": "module"
}
