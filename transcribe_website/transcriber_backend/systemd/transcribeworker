# /etc/systemd/system/transcribeworker.service
[Service]
ExecStart=/usr/bin/docker run --rm \
    --name transcribe_worker \
    -v ./SECRETS.toml:/app/SECRETS.toml:ro \
    -v ./whisper_models:/app/whisper_models \
    burnysc2/transcribe_worker:latest
Restart=always
RestartSec=20
SyslogIdentifier=transcribeworker
User=transcribeworker
Group=transcribeworker
WorkingDirectory=/home/transcribeworker
ExecStop=/usr/bin/docker rm -f transcribe_worker

[Install]
WantedBy=multi-user.target
